{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "DataShareName": {
            "type": "String",
            "metadata": {
                "description": "Name of the Data Share Account that will host your data shares"
            }
        },
        "Location": {
            "type": "string",
            "defaultValue": "East US",
            "allowedValues": [
                "East US",
                "East US 2",
                "West Europe",
                "West US 2",
                "Australia East",
                "North Europe",
                "Southeast Asia",
                "South Central US",
                "UK South"
            ]
        }
    },
    "variables": {
        "DataShareStorageAccount": "[substring(concat(parameters('DataShareName'), uniqueString(resourceGroup().id), 'storage'), 0, 29)]",
        "StorageBlobDataReader": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', '2a2b9908-6ea1-4ae2-8e65-a410df84e7d1')]",
        "RoleAssignmentName": "[concat(variables('DataShareStorageAccount'), '/Microsoft.Authorization/', guid(uniqueString(variables('DataShareStorageAccount'))))]",
        "AppServicePlanName": "[substring(concat(parameters('DataShareName'), uniqueString(resourceGroup().id), '-Plan'), 0, 29)]",
        "PackageURI": "https://raw.githubusercontent.com/ashisa/publisher-arm-template/master/functionapp/functionapp.zip",
        "FunctionStorageName": "[substring(concat(parameters('DataShareName'), uniqueString(resourceGroup().id), 'funcstorage'), 0, 29)]",
        "FunctionAppName": "[substring(concat(parameters('DataShareName'), uniqueString(resourceGroup().id), 'functionapp'), 0, 29)]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "name": "[variables('DataShareStorageAccount')]",
            "location": "[parameters('Location')]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "largeFileSharesState": "Disabled",
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "file": {
                            "keyType": "Account",
                            "enabled": true
                        },
                        "blob": {
                            "keyType": "Account",
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
            }
        },
        {
            "type": "Microsoft.DataShare/accounts",
            "apiVersion": "2019-11-01",
            "name": "[parameters('DataShareName')]",
            "location": "[parameters('Location')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {}
        },
        {
            "type": "Microsoft.Storage/storageAccounts/providers/roleAssignments",
            "apiVersion": "2018-09-01-preview",
            "name": "[variables('RoleAssignmentName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('DataShareStorageAccount'))]",
                "[resourceId('Microsoft.DataShare/accounts', parameters('DataShareName'))]"
            ],
            "properties": {
                "roleDefinitionId": "[variables('StorageBlobDataReader')]",
                "principalId": "[reference(concat('Microsoft.DataShare/accounts/', parameters('DataShareName')), '2019-11-01', 'Full').identity.principalId]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('FunctionStorageName')]",
            "apiVersion": "2019-06-01",
            "location": "[parameters('location')]",
            "kind": "Storage",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2019-08-01",
            "name": "[concat(parameters('DataShareName'), '-Plan')]",
            "location": "[parameters('Location')]",
            "sku": {
                "name": "B1"
            },
            "properties": {
                "name": "[concat(parameters('DataShareName'), '-Plan')]"
            }
        },
        {
            "apiVersion": "2019-08-01",
            "type": "Microsoft.Web/sites",
            "name": "[variables('FunctionAppName')]",
            "location": "[parameters('Location')]",
            "kind": "functionapp",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('AppServicePlanName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('FunctionStorageName'))]"
            ],
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', concat(parameters('DataShareName'), '-Plan'))]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('FunctionStorageName'), ';EndpointSuffix=', environment().suffixes.storage, ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('FunctionStorageName')), '2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('FunctionStorageName'), ';EndpointSuffix=', environment().suffixes.storage, ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('FunctionStorageName')), '2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[toLower(concat(parameters('DataShareName'), '-function'))]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "~10"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "powershell"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "apiVersion": "2015-08-01",
                    "name": "MSDeploy",
                    "type": "extensions",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', concat(parameters('DataShareName'), 'functionapp'))]"
                    ],
                    "properties": {
                        "packageUri": "[variables('packageURI')]"
                    }
                }
            ]
        }
    ]
}